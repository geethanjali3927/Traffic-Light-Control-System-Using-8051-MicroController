#include <reg51.h>

#define RED_LED    0x01  // P1.0
#define YELLOW_LED 0x02  // P1.1
#define GREEN_LED  0x04  // P1.2

void delay_ms(unsigned int ms);

void main() {
    while (1) {
        P1 = RED_LED;
        delay_ms(5000);

        P1 = YELLOW_LED;
        delay_ms(2000);

        P1 = GREEN_LED;
        delay_ms(5000);
    }
}

void delay_ms(unsigned int ms) {
    unsigned int i, j;
    for (i = 0; i < ms; i++)
        for (j = 0; j < 1275; j++);
}
